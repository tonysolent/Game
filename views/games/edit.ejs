<%- include('../partials/header.ejs') %>

<h1>Edit Game</h1>

<form action="/games/<%= game._id %>?_method=PUT" method="POST">
  <div>
    <label for="title">Title:</label>
    <input type="text" name="title" value="<%= game.title %>" required>
  </div>
  <div>
    <label for="releaseDate">Release Date:</label>
    <input type="text" name="releaseDate" value="<%= game.releaseDate %>" required>
  </div>
  <div>
    <label for="rating">Rating:</label>
    <input type="text" name="rating" value="<%= game.rating %>" required>
  </div>
  <div>
    <label for="genres">Genres:</label>
    <input type="text" name="genres" value="<%= Array.isArray(game.genres) ? game.genres.join(', ') : '' %>" required>
  </div>
  <div>
    <label for="summary">Summary:</label>
    <textarea name="summary" required><%= game.summary %></textarea>
  </div>
  <button type="submit">Update Game</button>
</form>

<%- include('../partials/footer.ejs') %>